@model IEnumerable<MVC.ViewModels.ProductoViewModel>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PesoUnidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RutCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreCliente)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PesoUnidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RutCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCliente)
        </td>
        
    </tr>
}

</table>
